@page
@model SpacerPoBialymstoku.Pages.PlacesToVisitModel
@{
}
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" integrity="sha512-..." crossorigin="anonymous" />

<div class="card-columns">

    @foreach (var place in Model.PlacesFromDatabase)
    {

        <div class="card" style="display: inline-block; vertical-align: bottom;">
            <div class="like-dislike-buttons" style="position: absolute; right: 0;">
                <form method="post">
                    <input type="hidden" name="placeId" value="@place.Id" />
                    <p>@place.Rating</p>
                    <button type="submit" class="like-button" name="action" value="like"><i class="fas fa-thumbs-up"></i></button>
                    <button type="submit" class="dislike-button" name="action" value="dislike"><i class="fas fa-thumbs-down"></i></button>
                </form>


            </div>
            <div class="card-body">
                <h4 class="card-title">@place.Title</h4>
                <span style="font-size: 12px;">@place.Description</span>
            </div>
            <a href="PlaceInfo?id=@place.Id">
                <div class="card-img" style="background-image: url('data:image/jpg;base64,@place.OldImageData')" ;>
                </div>
            </a>

        </div>

    }
    <div class="card" width="400" height="400" style="display: inline-block; vertical-align: bottom;">
        <div class="card-body">
            <h1 class="card-title" style="display: flex; justify-content: center; align-items: center;">Dodaj kolejne</h1>
        </div>
        <div class="card-img" style="display: flex; justify-content: center; align-items: center;">
            <a href="AddNewPlace">
                <img src="https://cdn.pixabay.com/photo/2012/04/02/16/07/plus-24844_1280.png" alt="Dodaj nowe miejsce" width="100" height="100">
            </a>
        </div>
    </div>
</div>

